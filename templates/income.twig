{% if 0 != before_page %}<a href="./income.php?p={{ before_page | e('url') }}&{{ search_string_e }}&sort={{ sort|e('url') }}">前へ</a>{% endif %} 
	{# e('url')はエスケープ #}
{% if 0 != next_page %}<a href="./income.php?p={{ next_page | e('url') }}&{{ search_string_e }}&sort={{ sort|e('url') }}">次へ</a>{% endif %}<br>


<table border="1">
<tr>
	<th>id
	<th>日付
	<th>科目
	<th>金額
	<th>タグ
{% for key, val in data %}
<tr>
	<td>{{ val.regist_id }}
	<td>{{ val.date }}
	<td>{{ val.subject }}
	<td>{{ val.income | number_format }}円
	<td>
	{% for k,v in val.tags %}
		#{{v}}
	{% endfor %}
	</td>
{% endfor %}
</table>
    
